    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Middlelayer Entrypoint",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "middlelayer.entrypoint:app",
                "--reload",
                "--host=0.0.0.0",
                "--port=8888"
            ],
            "env": {
                "RESOURCE_BASE": "${cwd}/resources"
            },
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Middlelayer k8s Client",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "middlelayer.main:app",
                "--reload",
                "--host=0.0.0.0",
                "--port=8888"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}